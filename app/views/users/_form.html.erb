<%= simple_form_for @user, :html => { :class => 'form-vertical' } do |f| %>
  <%= f.input :username %>
  <%= f.input :email %>
  <%= f.input :fullname %>
  <%= f.input :address %>
  <%= f.input :phone %>
  <%= f.input :fax %>
  <%= f.input :remark %>
 
  <%= f.input :active %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %>
  </div>
<% end %>
