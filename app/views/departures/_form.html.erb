<%= simple_form_for @departure, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :vessel %>
  <%= f.input :sales_quota %>
  <%= f.input :online_quota %>
  <%= f.input :custom_quota %>
  <%= f.input :on_call %>
  <%= f.input :status_id %>
  <%= f.input :active %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                departures_path, :class => 'btn' %>
  </div>
<% end %>
