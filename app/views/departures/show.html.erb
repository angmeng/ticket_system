<%- model_class = Departure -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:vessel_id) %>:</strong></dt>
  <dd><%= @departure.vessel.name rescue "-" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sales_quota) %>:</strong></dt>
  <dd><%= @departure.sales_quota %></dd>
  <dt><strong><%= model_class.human_attribute_name(:online_quota) %>:</strong></dt>
  <dd><%= @departure.online_quota %></dd>
  <dt><strong><%= model_class.human_attribute_name(:custom_quota) %>:</strong></dt>
  <dd><%= @departure.custom_quota %></dd>
  <dt><strong><%= model_class.human_attribute_name(:on_call) %>:</strong></dt>
  <dd><%= @departure.on_call %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status_id) %>:</strong></dt>
  <dd><%= @departure.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @departure.active %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              departures_path, :class => 'btn'  %>
  <%= link_to t('.new', :default => t("helpers.links.new")),
            new_departure_path,
            :class => 'btn btn-primary' %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_departure_path(@departure), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              departure_path(@departure),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
