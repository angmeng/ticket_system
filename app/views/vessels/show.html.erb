<%- model_class = Vessel -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
  <dd><%= @vessel.code %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @vessel.name %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:total_passenger) %>:</strong></dt>
  <dd><%= @vessel.total_passenger %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:total_crew) %>:</strong></dt>
  <dd><%= @vessel.total_crew %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @vessel.active %>&nbsp;</dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              vessels_path, :class => 'btn'  %>
  <%= link_to t('.new', :default => t("helpers.links.new")),
            new_vessel_path,
            :class => 'btn btn-primary' %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_vessel_path(@vessel), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              vessel_path(@vessel),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
