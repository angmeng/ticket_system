							  <tr>
	                           <td></td>
	                           <td><%= @order.coming_back_item.total_tickets %> <hr/></td>
	                           <td></td>
	                           <td> <%= "%.2f" % @order.coming_back_item.total_amount %> <hr/></td>
							  </tr>
							 <tbody>
							 <% @net_total += @order.coming_back_item.total_amount %>
