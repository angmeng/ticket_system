          			  		<tr>
          			  		  <th colspan="4">Going Out : <%= @order.going_out_item.title %></th>
          			  		</tr>
          			  	</thead>
                        <tbody>
						  <tr>
						   <td>Adult (<%= "%.2f" % @order.going_out_item.adult_fare %>)</td>
