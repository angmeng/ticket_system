 <%= form_tag(make_payment_order_path(@order), :class => "form-vertical", :id => "submit_payment_form") do %>

  <%= render "order_detail" %>

  <%= render "passenger_detail" %>
  
  <div class="row-fluid">
     <!--Tabs1-->
    <div class="span12">
     <div id="accordion0" class="accordion">
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" href="#notification1" data-original-title="">
                        <i class="icon-th icon-white"></i> <span class="divider-vertical"></span>  Make Payment <i class="icon-chevron-down icon-white pull-right"></i>
                    </a>
                </div>
                <div id="notification1" class="accordion-body collapse in">
                    <div class="accordion-inner paddind">
                    	
          	<div class="control-group select required">
  						<label class="radio inline">
  						  <input type="radio" name="order[payment_type_id]" id="payment_type_cash" value="<%= PaymentType::CASH %>" checked="checked">
  						  Cash
  						</label>

              <% if @order.buyer_is_public? %>
                <label class="radio inline">
                  <input type="radio" name="order[payment_type_id]" id="payment_type_credit" value="<%= PaymentType::FREE %>">
                  F.O.C
                </label>
              <% else %>
    						<label class="radio inline">
    						  <input type="radio" name="order[payment_type_id]" id="payment_type_credit" value="<%= PaymentType::CREDIT %>">
    						  Credit
    						</label>
              <% end %>

              <!-- Modal for F.O.C or credit of agent, but NOT for warrant -->
              <div id="byPass" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                  <h3 id="myModalLabel">Authorize</h3>
                </div>
                <div class="modal-body">
                <p><%= text_field_tag :username, params[:username], :placeholder => "Username" %></p>
                <p><%= password_field_tag :password, params[:password], :placeholder => "Password" %></p>
                </div>
                <div class="modal-footer">
                  <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                  <a href="#" class="btn btn-primary" id="accept_button">Accept</a>
                </div>
              </div>



						</div>

						<div id="cash_method">
							<%= render "cash_method" %>
						</div>

						<div id="credit_method" style="display:none">
							<%= render "credit_method" %>
              <%= hidden_field_tag :show_manager_id, params[:show_manager_id], :id => "input_manager_id" %>
						</div>

	                </div>
	             </div>
	            </div>
	          </div>
       </div>
  </div>

  <button type="submit" class="btn btn-primary btn-large" id="submit_button">Submit</button>
<% end %>

    <% content_for :javascripts_path do %>
      <script>
       $(function(){
          $("#payment_type_cash").click(function(){
          	$("#cash_method").show();
          	$("#credit_method").hide();
          })

          $("#payment_type_credit").click(function(){
            var payment_type = $(this).val();
            if (payment_type == <%= PaymentType::FREE %>){
            	$('#byPass').modal('show')
            } else {
              $("#cash_method").hide();
              $("#credit_method").show();
            }
          })

          $("#inputAmount").keyup(function() {
            var total = $("#net-total").text();
            var balance = parseFloat($(this).val()) - parseFloat(total);
            $("#balance").text(balance.toFixed(2));
          });

          $("#accept_button").click(function(){
            <% if (@order.buyer_is_agent? && @net_total > @order.buyer_credit) || @order.buyer_is_public? %>
                var fullname_string = $("#fullname").val();
                if (fullname_string.length == 0) {
                  alert("Fullname must key-in in the Passenger Detail. Thanks.");
                  return false
                }

                var username = $("#username").val();
                var password = $("#password").val();
                $.ajax({
                  type:'POST', 
                  dataType:"json",
                  url: '/orders/user_authorize', 
                  data: { 'username' : username, 'password' : password },
                  success: function(response) {
                          if( response.status == true ) {
                            <% if (@order.buyer_is_agent?) %>
                              $("#input_manager_id").val(response.manager_id);
                            <% end %>
                            $("#byPass").modal('hide');
                            $("form#submit_payment_form").submit();
                            return true;
                          } else {
                            alert("Sorry, you are not authority...");
                            return false;
                          }       
                  }
                });
            <% end %>
          });  

          $("#submit_button").click(function(){
            <% if @order.buyer_is_agent? && @net_total > @order.buyer_credit %>
              if(parseInt($("input[name='order[payment_type_id]']:radio:checked").val()) == <%= PaymentType::CREDIT %>)
              {
                alert("Credit is not enough !");
                return false
              }
            <% end %>

            var fullname_string = $("#fullname").val();
            if (fullname_string.length == 0) {
              alert("Fullname must key-in in the Passenger Detail.");
              return false
            }
          });


       	    });
       </script>

    <% end %>

