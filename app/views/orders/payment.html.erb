 <%= form_tag(make_payment_order_path(@order), :class => "form-vertical") do %>

  <%= render "order_detail" %>
  
 <div class="row-fluid">
     <!--Tabs1-->
    <div class="span12">
     <div id="accordion1" class="accordion">
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" href="#notification1" data-original-title="">
                        <i class="icon-th icon-white"></i> <span class="divider-vertical"></span>  Make Payment <i class="icon-chevron-down icon-white pull-right"></i>
                    </a>
                </div>
                <div id="notification1" class="accordion-body collapse in">
                    <div class="accordion-inner paddind">
                    	
                    	<div class="control-group select required">
						<label class="radio inline">
						  <input type="radio" name="order[payment_type_id]" id="payment_type_cash" value="<%= PaymentType::CASH %>" checked="checked">
						  Cash
						</label>
            <% unless @order.buyer_is_public?  %>
  						<label class="radio inline">
  						  <input type="radio" name="order[payment_type_id]" id="payment_type_credit" value="<%= PaymentType::CREDIT %>">
  						  Credit
  						</label>
            <% end %>
						</div>

						<div id="cash_method">
							<%= render "cash_method" %>
						</div>

						<div id="credit_method" style="display:none">
							<%= render "credit_method" %>
						</div>

             <button type="submit" class="btn btn-primary btn-large" id="submit_button">Submit</button>

	                </div>
	             </div>
	            </div>
	          </div>
       </div>
   </div>

   <% end %>

    <% content_for :javascripts_path do %>
      <script>
       $(function(){
          $("#payment_type_cash").click(function(){
          	$("#cash_method").show();
          	$("#credit_method").hide();
          })

          $("#payment_type_credit").click(function(){
          	$("#cash_method").hide();
          	$("#credit_method").show();
          })

          $("#inputAmount").keyup(function() {
            var total = $("#net-total").text();
            var balance = parseFloat($(this).val()) - parseFloat(total);
            $("#balance").text(balance.toFixed(2));
          });

          $("#submit_button").click(function(){
            <% if @order.buyer_is_sub_agent? && @net_total > @order.buyer_credit %>
            if(parseInt($("input[name='order[payment_type_id]']:radio:checked").val()) == <%= PaymentType::CREDIT %>)
              {
                alert("Credit is not enough !");
                return false
              }
            <% end %>

            // if(parseInt($("input[name='order[payment_type_id]']:radio:checked").val()) == <%= PaymentType::CASH %>)
            //   {
            //     if($("#inputAmount").val()=="")
            //     {
            //       alert("You must enter an amount");
            //       return false
            //     }
            //   }
          });


       	    });
       </script>

    <% end %>

