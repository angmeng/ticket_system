<%#= debug(order.inspect) %>
<%= hidden_field_tag "order[trip_type]", order[:order]["trip_type"] %>
<%= hidden_field_tag "order[departure_jetty_id]", order[:order]["departure_jetty_id"] %>
<%= hidden_field_tag "order[order_arrival_jetty_id_div]", order[:order]["order_arrival_jetty_id_div"] %>
<%= hidden_field_tag "order[depart_date]", order[:order]["depart_date"] %>
<%= hidden_field_tag "order[return_date]", order[:order]["return_date"] %>
<%= hidden_field_tag "order[adult]", order[:order]["adult"] %>
<%= hidden_field_tag "order[adult]", order[:order]["kid"] %>

<% order[:departure_ticket].each do |ticket| %>
	<%= hidden_field_tag "order[departure_ticket_ids][]", ticket.id %>
<% end %>

<% order[:arrival_ticket].each do |ticket| %>
	<%= hidden_field_tag "order[arrival_ticket_ids][]", ticket.id %>
<% end if order[:arrival_ticket] %>