<div class="row-fluid">
     <!--Tabs1-->
    <div class="span12">
	    <div id="accordion0" class="accordion">
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" href="#notification0" data-original-title="">
                        <i class="icon-th icon-white"></i> <span class="divider-vertical"></span>  Passenger Detail <i class="icon-chevron-down icon-white pull-right"></i>
                    </a>
                </div>
                <div id="notification0" class="accordion-body collapse in">
                    <div class="accordion-inner paddind">
                    	<table>
                    		<tr>
                    			<td width="150">Title</td>
                    			<td>
                    				<%= select_tag :title, options_for_select(TitleName::CALL), :include_blank => true %>
                    			</td>
                    		</tr>
                    		<tr>
		          				<td>Fullname *</td><td><%= text_field_tag :fullname, params[:fullname] %></td>
		          			</tr>
		          			<tr>
		          				<td>Date of Birth</td><td>
				          			<span data-date-format="dd-mm-yyyy" data-date="<%= Date.today.strftime("%d-%m-%Y") %>" class="input-append date" id="start">
                                        <%= text_field_tag :date_of_birth, params[:date_of_birth], :class => "span2", :style => "width:100px;" %>
                                    <span class="add-on"><i class="icon-th"></i></span>
			          			</td>
                    		</tr>
                    		<tr>
                    			<td>Travel Document</td>
                    			<td><%= select_tag :travel_document, options_for_select([ "Passport", "IC No.", "Travel Visa" ]), :include_blank => true %></td>
                    		</tr>
                    		<tr>
                    			<td>Issuing Country</td>
                    			<td><%= select_tag :issuing_country, options_for_select([ "Malaysia" ]), :include_blank => true %></td>
                    		</tr>
                    		<tr>
                    			<td>Document No.</td>
                    			<td><%= text_field_tag :document_no, params[:document_no] %></td>
                    		</tr>
                    		<tr>
                    			<td>Expiration Date</td>
                    			<td>
				          			<span data-date-format="dd-mm-yyyy" data-date="<%= Date.today.strftime("%d-%m-%Y") %>" class="input-append date" id="end">
                                        <%= text_field_tag :expiration_date, params[:expiration_date], :class => "span2", :style => "width:100px;" %>
                                    <span class="add-on"><i class="icon-th"></i></span>
			          			</td>
                    		</tr>
                    	</table>
	                </div>
	            </div>
	        </div>
	    </div>
    </div>
</div>

<% content_for :javascripts_path do %>
  <script>
   $(function(){
        window.prettyPrint && prettyPrint();

        $('#start, #end').datepicker({ dateFormat: "dd-mm-yy" }).on('changeDate', function(ev){
            $('#start, #end').datepicker('hide');
          });
    });
  </script>
<% end %>

