<h1>Listing orders</h1>

<table>
  <tr>
    <th>Buyer</th>
    <th>Route Type</th>
    <th>Total tickets</th>
    <th>Total Amount</th>
    <th>Payment type</th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.buyer_name %></td>
    <td><%= order.travel_type %></td>
    <td><%= order.total_tickets %></td>
    <td><%= order.total_amount %></td>
    <td><%= order.payment_type %></td>
    <td><%= link_to 'Show', order %>
    <%= link_to 'Edit', edit_order_path(order) %>
    <% if order.is_pending? %>
      <%= link_to 'Voided', void_order_path(order), method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
</td>
  </tr>
<% end %>
</table>

<br />

