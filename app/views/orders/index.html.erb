<h1>Listing orders</h1>

<table>
  <tr>
    <th>User</th>
    <th>Payment type</th>
    <th>Free tickets</th>
    <th>Discount</th>
    <th>Extra charges</th>
    <th>Amount tender</th>
    <th>Remark</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.user_id %></td>
    <td><%= order.payment_type_id %></td>
    <td><%= order.free_tickets %></td>
    <td><%= order.discount %></td>
    <td><%= order.extra_charges %></td>
    <td><%= order.amount_tender %></td>
    <td><%= order.remark %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

