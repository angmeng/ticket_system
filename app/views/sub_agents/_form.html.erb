<%= simple_form_for(@agent, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.input :username, :input_html => { :class => "span6" }  %>
  <%= f.input :fullname, :input_html => { :class => "span6" }  %>
  <%= f.association :agent_group %>

  <% if is_agent? %>
    <%= f.input :category_id, :as => :hidden, :input_html => { :value => UserType::SUB_AGENT } %>
    <%= f.input :branch_id, :as => :hidden, :input_html => { :value => current_user.branch_id } %>
  <% end %>
  
  <%= f.input :phone %>
  <%= f.input :fax %>
  <%= f.input :email %>
  <%= f.input :remark, :input_html => { :class => "span6" }  %>
  <%= f.input :password %>
  <% if @agent.new_record? %>
   <%= f.input :password_confirmation %>
  <% end %>
  <%= f.input :active %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sub_agents_path, :class => 'btn' %>
  </div>
<% end %>
