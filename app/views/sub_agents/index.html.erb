<%- model_class = SubAgent -%>
<div id="accordion1" class="accordion">
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" href="#notification" data-original-title="">
                        <i class="icon-th icon-white"></i> <span class="divider-vertical"></span>  <%=t '.title', :default => model_class.model_name.human.pluralize %> <i class="icon-chevron-down icon-white pull-right"></i>
                    </a>
                </div>
                <div id="notification" class="accordion-body collapse in">
                    <div class="accordion-inner paddind">
                        <table  class="table table-bordered table-striped pull-left" id="example" >
                            <thead>
    <tr>
    
      <th><%= model_class.human_attribute_name(:username) %></th>
      <th><%= model_class.human_attribute_name(:fullname) %></th>
      <th><%= model_class.human_attribute_name(:agent_group_id) %></th>
      <th><%= model_class.human_attribute_name(:branch_id) %></th>
      <th><%= model_class.human_attribute_name(:credit) %></th>
      <th><%= model_class.human_attribute_name(:active) %></th>
  
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @agents.each do |agent| %>
      <tr class="<%= cycle("odd", "even") %>">
        <td><%= link_to agent.username, sub_agent_path(agent) %></td>

        <td><%= agent.fullname %></td>
        <td><%= agent.agent_group.name rescue "-" %></td>
        <td><%= agent.branch.name rescue "-" %></td>
        <td><%= agent.credit %></td>
        <td><%= agent.active %></td>

        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_sub_agent_path(agent), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      sub_agent_path(agent),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
 <br />

                      </div>
                  </div>
              </div>

          </div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_sub_agent_path,
            :class => 'btn btn-primary' %>
