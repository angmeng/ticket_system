<%= simple_form_for @agent, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :username, :input_html => { :class => "span6" }  %>
  <%= f.input :fullname, :input_html => { :class => "span6" }  %>
  <% if is_admin? %>
    <%= f.association :agent_group %>
  <% elsif is_agent? %>
    <%= f.input :agent_group_id, :as => :hidden, :input_html => { :value => UserType::SUB_AGENT } %>
  <% end %>
  <%= f.association :branch %>
  <%= f.input :phone %>
  <%= f.input :fax %>
  <%= f.input :email %>
  <%= f.input :remark, :input_html => { :class => "span6" }  %>
  <%= f.input :active %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                agents_path, :class => 'btn' %>
  </div>
<% end %>
