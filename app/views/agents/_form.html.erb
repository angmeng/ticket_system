<%= simple_form_for([@branch, @agent], :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.input :username, :input_html => { :class => "span6" }  %>
  <%= f.input :fullname, :input_html => { :class => "span6" }  %>
  <%= f.association :agent_group %>
  <%= f.input :category_id, :as => :hidden, :input_html => { :value => UserType::AGENT } %>
  <%# f.association :branch %>
  <%= f.input :phone %>
  <%= f.input :fax %>
  <%= f.input :email %>
  <%= f.input :remark, :input_html => { :class => "span6" }  %>
  <%= f.input :password %>
  <% if @agent.new_record? %>
   <%= f.input :password_confirmation %>
  <% end %>
  <%= f.input :active %>
  <div class="form-actions">
    <%= f.submit "Submit", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                branch_agents_path(@branch), :class => 'btn' %>
  </div>
<% end %>
