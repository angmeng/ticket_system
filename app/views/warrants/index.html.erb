<%- model_class = Warrant -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      
      <th><%= model_class.human_attribute_name(:code) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
     
      <th><%= model_class.human_attribute_name(:email) %></th>
    
      <th><%= model_class.human_attribute_name(:active) %></th>
     
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @warrants.each do |warrant| %>
      <tr>
        <td><%= link_to warrant.code, warrant_path(warrant) %></td>
       
        <td><%= warrant.name %></td>
       
        <td><%= warrant.email %></td>
       
        <td><%= warrant.active %></td>
        
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_warrant_path(warrant), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      warrant_path(warrant),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_warrant_path,
            :class => 'btn btn-primary' %>
