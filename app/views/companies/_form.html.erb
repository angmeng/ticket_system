<%= simple_form_for @company, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name, :input_html => { :class => "span6" }  %>
  <%= f.input :register_number, :input_html => { :class => "span6" }  %>
  <%= f.input :address_1, :input_html => { :class => "span6" }  %>
  <%= f.input :address_2, :input_html => { :class => "span6" }  %>
  <%= f.input :phone %>
  <%= f.input :fax %>
  <%= f.input :email %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                companies_path, :class => 'btn' %>
  </div>
<% end %>
