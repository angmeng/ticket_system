<%= simple_form_for @staff, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :username, :input_html => { :class => "span6" }  %>
  <%= f.input :fullname, :input_html => { :class => "span6" }  %>
  <%= f.input :address, :input_html => { :class => "span6" }  %>
  <%= f.input :phone %>
  <%= f.input :email %>
  <%= f.input :category_id,  :collection => UserType::OPTIONS, :as => :radio_buttons %>
  <%= f.association :branch %>
  <%= f.input :active %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                staffs_path, :class => 'btn' %>
  </div>
<% end %>
