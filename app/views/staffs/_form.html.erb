<%= simple_form_for @staff, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :username %>
  <%= f.input :fullname %>
  <%= f.input :address %>
  <%= f.input :phone %>
  <%= f.input :email %>
  <%= f.input :type_id %>
  <%= f.input :branch_id %>
  <%= f.input :active %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                staffs_path, :class => 'btn' %>
  </div>
<% end %>
