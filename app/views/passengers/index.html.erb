<h1>Listing passengers</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Fullname</th>
    <th>Date of birth</th>
    <th>Travel document</th>
    <th>Issuing country</th>
    <th>Document no</th>
    <th>Expiration date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @passengers.each do |passenger| %>
  <tr>
    <td><%= passenger.title %></td>
    <td><%= passenger.fullname %></td>
    <td><%= passenger.date_of_birth %></td>
    <td><%= passenger.travel_document %></td>
    <td><%= passenger.issuing_country %></td>
    <td><%= passenger.document_no %></td>
    <td><%= passenger.expiration_date %></td>
    <td><%= link_to 'Show', passenger %></td>
    <td><%= link_to 'Edit', edit_passenger_path(passenger) %></td>
    <td><%= link_to 'Destroy', passenger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

