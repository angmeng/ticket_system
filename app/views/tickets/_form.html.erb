<%= simple_form_for @ticket, :html => { :class => 'form-horizontal' } do |f| %>
  
  <%= f.input :code %>
  <%= f.input :name %>
  <%= f.association :routine %>
  <%= f.association :ticket_category %>
  <%= f.input :initial_number %>
  <%= f.input :fare %>
  <%= f.input :inventory_count %>
  <%= f.input :required_passenger_details %>
  <%= f.input :valid_from %>
  <%= f.input :expired_at %>
  <%= f.input :no_expired %>
  <%= f.input :active %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tickets_path, :class => 'btn' %>
  </div>
<% end %>
