<%- model_class = Ticket -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:routine_id) %></th>
      <th><%= model_class.human_attribute_name(:ticket_category_id) %></th>
      <th><%= model_class.human_attribute_name(:code) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:initial_number) %></th>
      <th><%= model_class.human_attribute_name(:fare) %></th>
      <th><%= model_class.human_attribute_name(:inventory_count) %></th>
      <th><%= model_class.human_attribute_name(:required_passenger_details) %></th>
      <th><%= model_class.human_attribute_name(:valid_from) %></th>
      <th><%= model_class.human_attribute_name(:expired_at) %></th>
      <th><%= model_class.human_attribute_name(:no_expired) %></th>
      <th><%= model_class.human_attribute_name(:active) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= link_to ticket.id, ticket_path(ticket) %></td>
        <td><%= ticket.routine_id %></td>
        <td><%= ticket.ticket_category_id %></td>
        <td><%= ticket.code %></td>
        <td><%= ticket.name %></td>
        <td><%= ticket.initial_number %></td>
        <td><%= ticket.fare %></td>
        <td><%= ticket.inventory_count %></td>
        <td><%= ticket.required_passenger_details %></td>
        <td><%= ticket.valid_from %></td>
        <td><%= ticket.expired_at %></td>
        <td><%= ticket.no_expired %></td>
        <td><%= ticket.active %></td>
        <td><%=l ticket.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ticket_path(ticket), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ticket_path(ticket),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_ticket_path,
            :class => 'btn btn-primary' %>
