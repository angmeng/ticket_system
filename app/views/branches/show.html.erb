<%- model_class = Branch -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
  <dd><%= @branch.code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @branch.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @branch.active %></dd>
  <dt title="Basic Commission"><strong>Basic Comm.:</strong></dt>
  <dd><%= number_with_precision(@branch.basic_commission, :precision => 2) %></dd>
  <dt title="Agent Commission"><strong>Agent Comm.:</strong></dt>
  <dd><%= number_with_precision(@branch.agent_commission, :precision => 2) %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              branches_path, :class => 'btn'  %>
  <%= link_to t('.new', :default => t("helpers.links.new")),
            new_branch_path,
            :class => 'btn btn-primary' %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_branch_path(@branch), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              branch_path(@branch),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
