<%= simple_form_for @staff_routine, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :staff %>
  <%= f.association :routine %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                staff_routines_path, :class => 'btn' %>
  </div>
<% end %>
